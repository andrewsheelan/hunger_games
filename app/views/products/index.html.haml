.page-header
  = link_to new_product_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Product
  %h1 Listing products

- @products.each do |product|
  .col-sm-6.col-md-4
    .thumbnail
      %h4.text-center
        %span.label.label-info= product.company.try :name
        %img.img-responsive{src: product.image }
      .caption
        .row
          .col-md-6.col-xs-6
            %h3 Galaxy S5
          .col-md-6.col-xs-6
            %h3
            %label= product.price
        %p.btn-productdescription= product.description
        .row
          .col-md-6
            %a.btn.btn-primary.btn-product
              %span.glyphicon.glyphicon-thumbs-up
              Like
          .col-md-6
            %a.btn.btn-success.btn-product{href: '#'}
              %span.glyphicon.glyphicon-shopping-cart
              Buy
        %p
